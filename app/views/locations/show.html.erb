
<h1><%= @location.name %>, <%= @location.state %> </h1>
   

    <div class="container">
        <div class="row row-cols-3">
         <% @properties.each do |property| %>
            <div class="card" style="width: 25rem;">
            <% if property.avatar.attached? %>
                <img src="<%= (url_for(property.avatar)) %>" class="card-img-top" alt="...">
            <% end %>
            <div class="card-body">
            <h1 class="card-title"><%= link_to property.name, location_property_path(property.location, property) %></h1>
            <h2 class="card-text">
            Bedrooms: <%= property.bedrooms %> 
            <br>
            Bathrooms: <%= property.bathrooms %>
            <br>
            Amenities: </h2>
            <% property.amenities.each do |amenity|%>
           <h3> <li><%= amenity.name %></li> </h3>
            <% end %></p>
            </div>
            </div>
        <% end %>
        </div>
    </div>

<div class="center">
    <button><%= link_to "Add new property to this location", new_location_property_path(@location) %></button>
</div>
    
